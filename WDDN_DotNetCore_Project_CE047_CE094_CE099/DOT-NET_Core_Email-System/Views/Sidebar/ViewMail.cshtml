@model DOT_NET_Core_Email_System.Models.DbEmail
@{
    ViewData["Title"] = "ViewMail";
}
<h3>ViewMail</h3>
<hr />
<div class="text-center">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">To</label>
        <div class="col-sm-10">
            <input type="email" asp-for="ToUserEmailId" class="form-control" id="email" placeholder="Email" readonly>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Subject</label>
        <div class="col-sm-10">
            <input type="text" asp-for="EmailSubject" class="form-control" id="subject" placeholder="Subject" readonly>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Body</label>
        <div class="col-sm-10">
            <textarea style="height:250px" id="body" asp-for="EmailText" class="form-control" rows="5" cols="20" readonly></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Attachment</label>
        <div class="col-sm-4" style="text-align:left">
            <div class="custom-file" style="width:fit-content">
                <input type="text" asp-for="AttachmentName" class="form-control" id="Attachment" placeholder="Attachment" readonly>
            </div>
            <div class="btn btn-info">
                <a asp-controller="Sidebar" asp-route-id="@Model.Id" asp-action="DownloadAttachment">Download</a>
            </div>
        </div>
    </div>
</div>