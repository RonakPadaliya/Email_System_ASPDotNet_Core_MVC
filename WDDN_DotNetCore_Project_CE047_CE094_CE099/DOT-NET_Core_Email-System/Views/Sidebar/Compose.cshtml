@model DOT_NET_Core_Email_System.ViewModels.ComposeViewModel
@{ }

<div class="text-center">
    <h1 class="bg-primary m-4" style="color:white">Compose</h1>
    <form asp-action="Compose" enctype="multipart/form-data">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">To</label>
            <div class="col-sm-10">
                <input type="email" asp-for="ToUserEmailId" class="form-control" id="email" placeholder="Email">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Subject</label>
            <div class="col-sm-10">
                <input type="text" asp-for="EmailSubject" class="form-control" id="subject" placeholder="Subject">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Body</label>
            <div class="col-sm-10">
                <textarea id="body" style="height:200px" asp-for="EmailText" class="form-control" rows="5" cols="20"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Attachment</label>
            <div class="col-sm-10" style="text-align:left">
                <div class="custom-file">
                    <input type="file" asp-for="Attachment">
                    <!--<input id="Attachment" type="file" />
                    <label class="custom-file-label" for="selectedfile" id="filelabel">Choose file</label>-->
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="d-flex flex-row bd-highlight mb-3">
                    <div class="p-2 bd-highlight">
                        <button type="submit" class="btn btn-primary">Send</button>
                    </div>
                    <div class="p-2 bd-highlight">
                        <button type="reset" class="btn btn-secondary">Reset</button>
                    </div>
                </div>
            </div>
        </div>
        @if (ViewBag.Message != null)
        {
            <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
            </script>
        }
    </form>
</div>

@section Scripts{
    <script>
    $('#selectedfile').on('change', function () {
            //get the file name
            var fileName = $(this).val().split("\\").pop();
            //replace the "Choose a file" label
            $(this).next('.custom-file-label').html(fileName);
        })</script>
}